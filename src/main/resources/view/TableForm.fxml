<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="609.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TableFormController">
   <children>
      <TableView fx:id="tblCustomers" layoutX="33.0" layoutY="307.0" prefHeight="259.0" prefWidth="534.0">
        <columns>
          <TableColumn prefWidth="75.0" text="Id" />
            <TableColumn prefWidth="195.0" text="Name" />
            <TableColumn prefWidth="263.0" text="Address" />
        </columns>
      </TableView>
      <VBox layoutX="14.0" layoutY="82.0" spacing="10.0">
         <children>
            <Label text="Customer Id" />
            <TextField fx:id="txtId" prefHeight="26.0" prefWidth="232.0" promptText="Ex: C001" />
            <Label text="Customer Name" />
            <TextField fx:id="txtName" prefHeight="26.0" prefWidth="232.0" promptText="Ex: Kamal" />
            <Label text="Customer Address" />
            <TextField fx:id="txtAddress" prefHeight="26.0" prefWidth="232.0" promptText="Ex: Panadura" />
         </children>
      </VBox>
      <Button fx:id="btnSaveCustomer" layoutX="270.0" layoutY="109.0" mnemonicParsing="false" onAction="#btnSaveCustomer_OnAction" prefHeight="26.0" prefWidth="128.0" style="-fx-background-color: #1E59B3; -fx-text-fill: white;" text="Save Customer" />
      <Button fx:id="btnNewCustomer" layoutX="14.0" layoutY="30.0" mnemonicParsing="false" onAction="#btnNewCustomer_OnAction" style="-fx-background-color: green; -fx-text-fill: white;" text="New Customer" />
      <Button fx:id="btnDeleteCustomer" layoutX="269.0" layoutY="144.0" mnemonicParsing="false" onAction="#btnDeleteCustomer_OnAction" prefHeight="26.0" prefWidth="128.0" style="-fx-background-color: red; -fx-text-fill: white;" text="Delete Customer" />
   </children>
</AnchorPane>
